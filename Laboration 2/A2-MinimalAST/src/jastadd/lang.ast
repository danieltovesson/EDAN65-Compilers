Program ::= Function*;

Function ::= name:Id codeBlock:Block;
Block ::= [Stmt];

abstract Stmt;
Declaration:Stmt ::= name:IdDecl;
Assignment:Stmt ::= name:IdUse value:Expr;

abstract Expr;
abstract Term:Expr;
abstract Factor:Expr;
abstract BinExpr:Expr ::= left:Expr right:Expr;
abstract Sum:BinExpr;

Add:Sum;

Id ::= <ID>;
IdDecl ::= <ID>;
IdUse:Factor ::= <ID>;
IntValue:Factor ::= <INTEGER>;
