Program ::= Functions*;

Functions ::= name:Id codeBlock:Block;
Block ::= [Stmt];

abstract Stmt;
Declaration:Stmt ::= name:IdDecl;
Assignment:Stmt ::= name:IdUse value:Expr;

abstract Expr;
abstract BinExpr:Expr ::= left:Expr right:Expr;
abstract Sum:BinExpr;
abstract Term:BinExpr;
abstract Factor:Expr;

Add:Sum;
Nbr:Factor ::= <INTEGER>;
IdUse:Factor ::= <ID>;
Id ::= <ID>;
IdDecl ::= <ID>;
